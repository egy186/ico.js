{
  "extends": [
    "@egy186/eslint-config",
    "@egy186/eslint-config/modules",
    "@egy186/eslint-config/node"
  ],
  "ignorePatterns": [
    "coverage",
    "dist"
  ],
  "overrides": [
    {
      "extends": "@egy186/eslint-config/browser",
      "files": [
        "docs/**/*.js"
      ],
      "globals": {
        "$": true,
        "ICO": true,
        "hljs": true
      },
      "rules": {
        "func-names": "off",
        "import/unambiguous": "off",
        "no-console": "off",
        "no-var": "off",
        "prefer-arrow-callback": "off",
        "prefer-template": "off",
        "vars-on-top": "off"
      }
    },
    {
      "env": {
        "browser": true
      },
      "files": [
        "src/browser/**/*.js"
      ]
    },
    {
      "env": {
        "mocha": true
      },
      "files": [
        "test/**/*.js"
      ],
      "rules": {
        "@stylistic/array-element-newline": "off",
        "no-unused-expressions": "off"
      }
    }
  ],
  "rules": {
    "import/extensions": [
      "error",
      "always"
    ],
    "jsdoc/no-defaults": "off",
    "jsdoc/no-undefined-types": "off"
  },
  "settings": {
    "import/ignore": [
      "marked"
    ]
  }
}
